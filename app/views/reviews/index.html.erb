<div class="container">
<h1 class="index-header"><strong>Reviews for <%= @dog.name %></strong></h1>

<%= link_to "Back to Dog Profile", dog_path(@dog), class: "btn btn-edit", style:"width: 200px; padding-left:10px;" %>

<% if @reviews.any? %>
  <div class="review-cards-container">
    <% @reviews.each do |review| %>
      <div class="review-card">
        <div class="review-content">
          <p class="review-rating"><strong>Rating:</strong> <%= review.rating %> / 5</p>
          <p class="review-comment"><strong>Comment:</strong> <%= review.comment %></p>
        </div>
        <div class="review-footer">
          <small>Reviewed on: <%= review.created_at.strftime("%B %d, %Y") %></small>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No reviews yet for this dog. Be the first to review!</p>
<% end %>
</div>
