<h2 class="index-header",><strong>Log in</strong></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-card", style="text-align: left; width:50%">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

    <div class="form-actions", style="display: flex; justify-content: center; align-items: center;">
    <%= f.button :submit, "Log in", class:"btn btn-edit" %>
  </div>
<% end %>

<%= render "devise/shared/links", link_class: "btn btn-booking", wrapper_style: "padding: 20px;", style: "display: flex; justify-content: center; align-items: center;" %>
