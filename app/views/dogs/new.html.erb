<h1 class="index-header"><strong>Add your doggo to the family!</strong></h1>

<div class="container">
  <div class="card form-card">
    <%= simple_form_for(@dog) do |f| %>
      <div class="form-group">
        <%= f.input :name, label: "Dog's Name" %>
      </div>
      <div class="form-group">
        <%= f.input :age, label: "Age" %>
      </div>
      <div class="form-group">
        <%= f.input :breed, label: "Breed" %>
      </div>
      <div class="form-group">
        <%= f.input :gender, label: "Gender", collection: ["Male", "Female"] %>
      </div>
      <div class="form-group">
        <%= f.input :size, label: "Size", collection: ["Small", "Medium", "Large", "Extra-large"] %>
      </div>
      <div class="form-group">
        <%= f.input :temperament, label: "Temperament" %>
      </div>
      <div class="form-group">
        <%= f.input :photo, as: :file, label: "Upload Photo" %>
      </div>
      <%= f.hidden_field :user_id %>

      <div class="button-group">
        <%= f.submit "Save Dog", class: "btn btn-save" %>
        <%= link_to "Cancel", dogs_path, class: "btn btn-cancel" %>
      </div>
    <% end %>
  </div>
</div>
